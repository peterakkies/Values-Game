{
	"plugins": ["react"],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true,
		"mocha": true
	},
	"extends": [
		"react-app",
		"airbnb",
		"plugin:prettier/recommended",
		"plugin:react/recommended"
	],
	"rules": {
		"jsx-a11y/href-no-hash": [0],
		"react/jsx-indent": [2, "tab"],
		"react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
		"react/jsx-one-expression-per-line": [0]
	}
}
